<Window x:Class="EscritorioMontreal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EscritorioMontreal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="23" Margin="210,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="210,130,0,0" VerticalAlignment="Top"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="210,188,0,0" VerticalAlignment="Top"/>
        <Button Content="Ingresar" HorizontalAlignment="Left" Margin="210,291,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="lblError" Content="" HorizontalAlignment="Left" Margin="210,250,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPASS" HorizontalAlignment="Left" Margin="210,220,0,0" VerticalAlignment="Top" Width="120" Height="25"/>

    </Grid>
</Window>
