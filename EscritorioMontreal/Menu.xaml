        <Button x:Name="btn_Programas" Content="Ver Programas" HorizontalAlignment="Left" Margin="39,81,0,0" VerticalAlignment="Top" Width="115" Click="btn_Programas_Click_1" />
        <Image HorizontalAlignment="Left" Height="191" Margin="199,112,0,0" VerticalAlignment="Top" Width="328" Source="Img/montreal.jpg"/>
    </Grid>
</Window>
